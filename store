                <button type="submit" class="btn btn-primary">إضافة التصنيف</button>
            </form>
        </div>
    </div>

    <script>
        // Global Variables
        let products = [];
        let categories = [];
        let users = [];
        let currentUser = null;
        let cart = [];
        let orders = [];

        // Initialize Data
        function initializeData() {
            // Load data from memory or initialize defaults
            products = [
                {
                    id: 1,
                    name: "هاتف ذكي Samsung Galaxy S23",
                    category: "electronics",
                    price: 3299,
                    image: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?w=400",
                    description: "أحدث هاتف من سامسونج بمواصفات عالية وكاميرا متطورة",
                    rating: 4.5,
                    reviews: 128,
                    comments: []
                },
                {
                    id: 2,
                    name: "لابتوب Dell XPS 13",
                    category: "electronics",
                    price: 4599,
                    image: "https://images.unsplash.com/photo-1496181133206-80ce9b88a853?w=400",
                    description: "لابتوب نحيف وخفيف مع أداء قوي وبطارية تدوم طويلاً",
                    rating: 4.8,
